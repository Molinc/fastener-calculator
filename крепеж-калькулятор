    <script>
        function calculate() {
            // Получаем значения из полей ввода
            const d = parseFloat(document.getElementById('diameter').value);
            const p = parseFloat(document.getElementById('pitch').value);
            const x = parseFloat(document.getElementById('coefficient').value);
            
            // Проверка на валидность
            if (isNaN(d) || isNaN(p) || isNaN(x) || d <= 0 || p <= 0) {
                alert('Пожалуйста, введите корректные числовые значения');
                return;
            }
            
            // Расчет параметров для шпильки
            const l1 = x * d;
            const l2 = l1 + 5 * p;
            const l3 = l1 + 2 * p;
            
            // Расчет параметров для болта
            const d1 = d - 2 * p;
            const D = 2 * d;
            const H = 0.8 * d;
            const h = 0.7 * d;
            const c = 0.1 * d;
            const R = 1.5 * d;
            const r = c;
            const r2 = d;
            const d2 = 1.1 * d;
            const k = 0.3 * d;
            const Dsh = 2.2 * d;
            const s = 0.15 * d;
            const l0 = 2 * d + 2 * p;
            
            // Форматирование чисел (округление до 2 знаков после запятой)
            function format(value) {
                return value.toFixed(2);
            }
            
            // Обновляем результаты для шпильки
            const studResults = document.getElementById('stud-results');
            studResults.innerHTML = `
                <div class="result-item">
                    <div class="param-name">l₁ (длина ввинчиваемой части)</div>
                    <div class="param-value">${format(l1)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">l₁ = x·d = ${x} × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">l₂ (длина под гайку)</div>
                    <div class="param-value">${format(l2)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">l₂ = l₁ + 5p = ${format(l1)} + 5 × ${format(p)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">l₃ (общая длина резьбы)</div>
                    <div class="param-value">${format(l3)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">l₃ = l₁ + 2p = ${format(l1)} + 2 × ${format(p)}</div>
                </div>
            `;
            
            // Обновляем результаты для болта
            const boltResults = document.getElementById('bolt-results');
            boltResults.innerHTML = `
                <div class="result-item">
                    <div class="param-name">d₁ (внутренний диаметр)</div>
                    <div class="param-value">${format(d1)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">d₁ = d - 2p = ${format(d)} - 2 × ${format(p)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">D (диаметр головки)</div>
                    <div class="param-value">${format(D)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">D = 2d = 2 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">H (высота головки)</div>
                    <div class="param-value">${format(H)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">H = 0.8d = 0.8 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">h (высота элемента)</div>
                    <div class="param-value">${format(h)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">h = 0.7d = 0.7 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">c (фаска)</div>
                    <div class="param-value">${format(c)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">c = 0.1d = 0.1 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">R (радиус скругления)</div>
                    <div class="param-value">${format(R)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">R = 1.5d = 1.5 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">r (радиус)</div>
                    <div class="param-value">${format(r)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">r = c = ${format(c)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">r₂ (радиус)</div>
                    <div class="param-value">${format(r2)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">r₂ = d = ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">d₂ (диаметр)</div>
                    <div class="param-value">${format(d2)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">d₂ = 1.1d = 1.1 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">k (катет/высота)</div>
                    <div class="param-value">${format(k)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">k = 0.3d = 0.3 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">Dш (диаметр под ключ)</div>
                    <div class="param-value">${format(Dsh)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">Dш = 2.2d = 2.2 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">s (толщина)</div>
                    <div class="param-value">${format(s)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">s = 0.15d = 0.15 × ${format(d)}</div>
                </div>
                <div class="result-item">
                    <div class="param-name">l₀ (длина)</div>
                    <div class="param-value">${format(l0)}<span class="value-unit"> мм</span></div>
                    <div class="param-formula">l₀ = 2d + 2p = 2 × ${format(d)} + 2 × ${format(p)}</div>
                </div>
            `;
        }
        
        // Выполняем расчет при загрузке страницы с значениями по умолчанию
        window.onload = calculate;
    </script>
</body>
</html>
