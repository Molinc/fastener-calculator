<body>
    <div class="container">
        <h1>Калькулятор крепёжных соединений</h1>

        <!-- Форма для расчёта болта -->
        <div id="boltCalculator">
            <h2>Расчёт болта</h2>
            <form id="boltForm">
                <label>Диаметр болта (d, мм): 
                    <input type="number" id="boltDiameter" required>
                </label><br>
                <label>Толщина первой детали (b₁, мм):
                    <input type="number" id="b1" required>
                </label><br>
                <label>Толщина второй детали (b₂, мм):
                    <input type="number" id="b2" required>
                </label><br>
                <label>Высота гайки (h, мм):
                    <input type="number" id="nutHeight" required>
                </label><br>
                <label>Толщина шайбы (s, мм):
                    <input type="number" id="washerThickness" required>
                </label><br>
                <button type="button" onclick="calculateBolt()">Рассчитать</button>
            </form>
            <div id="boltResults"></div>
        </div>

        <!-- Форма для расчёта шпильки -->
        <div id="studCalculator">
            <h2>Расчёт шпильки</h2>
            <form id="studForm">
                <label>Диаметр шпильки (d, мм):
                    <input type="number" id="studDiameter" required>
                </label><br>
                <label>Толщина детали (мм):
                    <input type="number" id="partThickness" required>
                </label><br>
                <label>Глубина ввинчивания (lₑᵥ, мм):
                    <input type="number" id="screwInDepth" required>
                </label><br>
                <label>Высота гайки (h, мм):
                    <input type="number" id="studNutHeight" required>
                </label><br>
                <label>Толщина шайбы (s, мм):
                    <input type="number" id="studWasherThickness" required>
                </label><br>
                <button type="button" onclick="calculateStud()">Рассчитать</button>
            </form>
            <div id="studResults"></div>
        </div>
    </div>
    <script>
       function calculateBolt() {
    const d = parseFloat(document.getElementById('boltDiameter').value);
    const b1 = parseFloat(document.getElementById('b1').value);
    const b2 = parseFloat(document.getElementById('b2').value);
    const h = parseFloat(document.getElementById('nutHeight').value);
    const s = parseFloat(document.getElementById('washerThickness').value);

    const thickness = b1 + b2; // Толщина пакета
    const k = 0.3 * d; // Выступающий конец (0.3d)
    const L = thickness + h + s + k; // Длина болта
    const threadLength = 30 + (d > 20 ? 10 : 0); // Примерная длина резьбы

    const results = `
        <table border="1">
            <tr><th>Параметр</th><th>Расчётное значение</th><th>Стандартное значение (ГОСТ)</th></tr>
            <tr><td>Диаметр болта (d)</td><td>${d} мм</td><td>По ГОСТ 7798-70</td></tr>
            <tr><td>Толщина пакета (b1+b2)</td><td>${thickness} мм</td><td>-</td></tr>
            <tr><td>Высота гайки (h)</td><td>${h} мм</td><td>По ГОСТ 5915-70</td></tr>
            <tr><td>Толщина шайбы (s)</td><td>${s} мм</td><td>По ГОСТ 11371-78</td></tr>
            <tr><td>Выступающий конец (k)</td><td>${k.toFixed(1)} мм</td><td>-</td></tr>
            <tr><td>Длина болта (L)</td><td>${L.toFixed(1)} мм</td><td>Ближайшая стандартная длина</td></tr>
            <tr><td>Длина резьбовой части</td><td>${threadLength} мм</td><td>По ГОСТ 24705-81</td></tr>
        </table>
    `;

    document.getElementById('boltResults').innerHTML = results;
}

function calculateStud() {
    const d = parseFloat(document.getElementById('studDiameter').value);
    const thickness = parseFloat(document.getElementById('partThickness').value);
    const l_vv = parseFloat(document.getElementById('screwInDepth').value);
    const h = parseFloat(document.getElementById('studNutHeight').value);
    const s = parseFloat(document.getElementById('studWasherThickness').value);

    const k = 10; // Запас на затяжку (примерное значение)
    const L = thickness + h + s + k + l_vv; // Полная длина шпильки
    const threadLength = l_vv + 25; // Длина резьбовой части (ввинчиваемый конец + гаечный)

    const results = `
        <table border="1">
            <tr><th>Параметр</th><th>Расчётное значение</th><th>Стандартное значение (ГОСТ)</th></tr>
            <tr><td>Диаметр шпильки (d)</td><td>${d} мм</td><td>По ГОСТ 22032-76</td></tr>
            <tr><td>Толщина детали</td><td>${thickness} мм</td><td>-</td></tr>
            <tr><td>Глубина ввинчивания (l_vv)</td><td>${l_vv} мм</td><td>0.8-1.0 * d по ГОСТ</td></tr>
            <tr><td>Высота гайки (h)</td><td>${h} мм</td><td>По ГОСТ 5915-70</td></tr>
            <tr><td>Толщина шайбы (s)</td><td>${s} мм</td><td>По ГОСТ 11371-78</td></tr>
            <tr><td>Запас на затяжку (k)</td><td>${k} мм</td><td>-</td></tr>
            <tr><td>Полная длина шпильки (L)</td><td>${L.toFixed(1)} мм</td><td>Ближайшая стандартная длина</td></tr>
            <tr><td>Длина резьбовой части</td><td>${threadLength} мм</td><td>По ГОСТ 24705-81</td></tr>
        </table>
    `;

    document.getElementById('studResults').innerHTML = results;
}
    <script>
